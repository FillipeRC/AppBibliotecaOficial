<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="AppBiblioPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Enderecos</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Locacao</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.AcervoPerfil</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.TipoAcervoPerfil</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Acervo</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Usuario</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Flag</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Campus</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.UsuarioPerfil</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.TipoUsuarioPerfil</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Genero</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Endereco</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.StatusLocacao</class>
    <class>br.edu.uerr.biblio.appbiblio.modelo.Locacoes</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_biblios?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
    </properties>
  </persistence-unit>
</persistence>
